{
  "name": "vscode-translate-hover",
  "displayName": "vscode-translate-hover",
  "description": "Translate selected text using Google Translate and display the result in a hover",
  "version": "0.1.0",
  "publisher": "satokaz",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.translatePaste",
        "title": "翻訳結果をペースト"
      }
    ],
    "keybindings": [
      {
        "command": "extension.translatePaste",
        "key": "ctrl+shift+t",
        "mac": "cmd+shift+t",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "Translate Hover",
      "properties": {
        "translateHover.translationMethod": {
          "type": "string",
          "enum": [
            "google",
            "openai"
          ],
          "default": "google",
          "description": "翻訳方法を選択 (google: Google翻訳, openai: OpenAI API)"
        },
        "translateHover.openaiApiKey": {
          "type": "string",
          "default": "",
          "description": "OpenAI APIキー (翻訳方法がopenaiの場合に必要)"
        },
        "translateHover.openaiBaseUrl": {
          "type": "string",
          "default": "",
          "description": "OpenAI APIのベースURL (LiteLLM ProxyなどAPI互換サービスを使用する場合に指定。空の場合はデフォルトのOpenAI APIを使用)"
        },
        "translateHover.openaiModel": {
          "type": "string",
          "default": "gpt-4o-mini",
          "description": "使用するOpenAIモデル"
        },
        "translateHover.openaiReasoningEffort": {
          "type": "string",
          "enum": [
            "",
            "low",
            "medium",
            "high"
          ],
          "default": "",
          "description": "推論努力レベル (o1シリーズのモデルで使用。空の場合は未指定)"
        },
        "translateHover.languageDetectionMethod": {
          "type": "string",
          "enum": [
            "regex",
            "llm"
          ],
          "default": "regex",
          "enumDescriptions": [
            "正規表現ベースの高速検出（無料）",
            "LLMベースの高精度検出（OpenAI使用時のみ、追加コストあり）"
          ],
          "description": "言語検出方法。LLMはOpenAI API使用時のみ有効（Google翻訳時は常にregex）"
        },
        "translateHover.targetLanguage": {
          "type": "string",
          "default": "ja",
          "enum": [
            "auto-ja",
            "auto-en",
            "auto-zh",
            "ja",
            "en",
            "zh",
            "zh-CN",
            "zh-TW",
            "ko",
            "es",
            "fr",
            "de",
            "it",
            "pt",
            "ru",
            "ar",
            "hi",
            "th",
            "vi",
            "id",
            "nl",
            "pl",
            "tr"
          ],
          "enumDescriptions": [
            "自動検出: 日本語→英語、その他→日本語",
            "自動検出: 英語→日本語、その他→英語",
            "自動検出: 中国語→英語、その他→中国語",
            "日本語",
            "英語",
            "中国語",
            "中国語(簡体)",
            "中国語(繁体)",
            "韓国語",
            "スペイン語",
            "フランス語",
            "ドイツ語",
            "イタリア語",
            "ポルトガル語",
            "ロシア語",
            "アラビア語",
            "ヒンディー語",
            "タイ語",
            "ベトナム語",
            "インドネシア語",
            "オランダ語",
            "ポーランド語",
            "トルコ語"
          ],
          "description": "翻訳先の言語コード。auto-XX を選ぶと自動検出モード (例: auto-ja で日本語⇔英語を自動切り替え)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "vscode-test",
    "lint": "eslint src --ext ts",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.x",
    "@types/vscode": "^1.85.0",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "axios": "^1.6.5",
    "openai": "^4.77.3"
  }
}
